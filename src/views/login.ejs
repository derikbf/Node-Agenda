<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Faça seu login ou crie seu usuário abaixo.</p>

      <%- include('includes/messages'); %>

        <div class="row">
          <div class="col-lg">
            <h4>Cadastro</h4>
            <p class="lead">Crie uma conta para salvar seus contatos de forma segura</p>
            <form class="form-cadastro" action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value=<%=csrfToken %>>
              <div class="form-group">
                <label class="my-1">Seu email</label>
                <input type="email" class="form-control my-1" name="email">
              </div>
              <div class="form-group">
                <label class="my-1">Sua senha</label>
                <input type="password" class="form-control my-1" name="password">
              </div>
              <button type="submit" class="btn btn-primary my-3">Finalizar</button>
            </form>
          </div>

          <div class="col-lg">
            <h4>Entrar</h4>
            <p class="lead">Faça seu login</p>
            <form class="form-login" action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value=<%=csrfToken %>>
              <div class="form-group">
                <label class="my-1">Seu email</label>
                <input type="email" class="form-control my-1" name="email">
              </div>
              <div class="form-group">
                <label class="my-1">Sua senha</label>
                <input type="password" class="form-control my-1" name="password">
              </div>
              <button type="submit" class="btn btn-primary my-3">Entrar</button>
            </form>
          </div>
        </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>
